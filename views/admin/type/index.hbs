{{#section 'title'}}
<b>Type</b>
{{/section}}

<div class="container" style="margin-top: 20px">
	<div class="row">
		<div class="col-sm-6 col-md-6 col-lg-6">
			<a class="btn btn-success" href="./type/create" role="button">
				<span class="glyphicon glyphicon-plus"></span>
				Add
			</a>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-md-6 col-lg-6">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Tên</th>
					</tr>
				</thead>
				<tbody>
					{{#each vm.types}}
					<tr>
						<td>{{id}}</td>
						<td>{{ten}}</td>
						<td class="text-right">
							<a class="btn btn-default btn-xs" href="/admin/type/delete?id={{id}}" role="button" onclick="return confirm('Bạn có muốn xóa loại sản phẩm này không?)">
								<span class="glyphicon glyphicon-remove"></span>
							</a>
							<a class="btn btn-default btn-xs" href="/admin/type/update?id={{id}}" role="button">
								<span class="glyphicon glyphicon-pencil"></span>
							</a>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>