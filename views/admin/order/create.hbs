{{#section 'title'}}
<b>Create order</b>
{{/section}} {{#if vm.showResult}}
<div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	<strong>OK!</strong> Order added.
</div>
{{/if}}

<div class="container-fluid">
	<form action="create" method="POST" role="form">
		<div class="form-group">
			<label for="">Tên người đặt</label>
			<select name="id_user" class="form-control">
				{{#each vm.users}}
				<option value="{{id}}">{{ten}}</option>
				{{/each}}
			</select>
		</div>
		<div class="form-group">
			<label for="">Ngày đặt</label>
			<input type="date" name="ngay_dat" class="form-control" />
		</div>
		<div class="form-group">
			<label for="">Tổng tiền</label>
			<input type="number" class="form-control" name="tong_tien">
		</div>
		<div class="form-group">
			<label for="">Trạng thái</label>
			<select name="trang_thai" class="form-control">
				<option value="Chưa giao hàng">Chưa giao hàng</option>
				<option value="Đã giao hàng">Đã giao hàng</option>
			</select>
		</div>
		<div class="form-group">
			<label for="">Trạng thái</label>
			<select name="thanh_toan" class="form-control">
				<option value="Chưa thanh toán">Chưa thanh toán</option>
				<option value="Đã thanh toán">Đã thanh toán</option>
			</select>
		</div>
		<a class="btn btn-default" href="/admin/order" role="button">
			<span class="glyphicon glyphicon-arrow-left"></span>
			Back
		</a>
		<button type="submit" class="btn btn-primary">
			<span class="glyphicon glyphicon-ok"></span>
			Add
		</button>
		<br>
		<br>
		<br>
		<br>
	</form>
</div>