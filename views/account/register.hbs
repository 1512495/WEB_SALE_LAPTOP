{{#section 'title'}} Register {{/section}}

 {{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assets/bootstrap-datepicker/css/bootstrap-datepicker3.min.css"> 
{{/section}}

 {{#section 'js'}}
    <script type="text/javascript">
        $(document).ready(function() {
            $("#re_password").blur(function(){
                var pass = $("#password").val();
                var re_pass = $(this).val();
                if(pass !== re_pass) {
                    $(".kiemtra").show();
                }
                else {
                     $(".kiemtra").hide();
                }
            });
        });
    </script>
{{/section}} 

{{#if showResult}}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>OK!</strong> Register successfully.
</div>
{{/if}}


<form action="" method="POST" class="form-horizontal" role="form">

    <div class="form-group">
        <label for="txtName" class="col-sm-2 control-label">Họ tên</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="ten" placeholder="Họ tên" name="ten" required autofocus>
        </div>
    </div>
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Giới tính</label>
        <div class="col-sm-4">
            <div class="col-sm-6">
                <label for="nam">Nam
                    <input type="radio" id="nam" name="gioi_tinh" value="1" checked>
                </label>
            </div>

            <div class="col-sm-6">
                <label for="nu">Nữ
                    <input type="radio" id="nu" name="gioi_tinh" value="0">
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Số điện thoại</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="sdt" name="sdt" required>
        </div>
    </div>
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Địa chỉ</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="dia_chi" required name="dia_chi" placeholder="HCM">
        </div>
    </div>
    <div class="form-group">
        <label for="txtEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" id="email" placeholder="example@gmail.com" name="email" required>
        </div>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
        </div>
    </div>
    <div class="form-group">
        <label for="txtCPWD" class="col-sm-2 control-label">Nhập lại password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="re_password" placeholder="Nhập lại password" name="re_password" required>
        </div>
    </div>
    <div class="form-group kiemtra" style="display: none">
        <label  class="col-sm-2 control-label">&nbsp;</label>
        <div class="col-sm-4">
            <label style="color: red">Nhập lại mật khẩu không khớp</label>
        </div>
    </div>
    <div class="form-group">
        <div class="g-recaptcha" style="width: 50%;margin:auto; display: block" data-sitekey="6LfOMFUUAAAAAIA0jryrGFr1BtnHv7MbYUGuB2B-"></div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-ok"></span>
                Đăng ký
            </button>
        </div>
    </div>
</form>
<br><br><br><br>

<script src='https://www.google.com/recaptcha/api.js'></script>

