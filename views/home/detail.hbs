                    <li class="list-group-item">Cảm ứng: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Không</li>
                </ul>

            </div>
            <!--  -->
            <div class="col-md-4 col-sm-4 col-xs-8">
                <img src="asserts/image/thongso.png" style="width: 350px;height:400px; margin-top: 77px;">
            </div>
        </div>
        <!--  -->
        <div>
            <form>
                <div class="form-group">
                    <textarea class="form-control" id="comment" style="width: 95%" rows="5">
                            
                        </textarea>
                    <br>
                    <button type="button" class="btn btn-danger" style="text-align: right;">Gởi câu hỏi</button>
                </div>
            </form>
            <br><br><br>
        </div>
    </div>

</div>


{{/with}}